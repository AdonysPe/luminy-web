---
import '@fontsource/playfair-display'
import Logo from './Logo.astro'
import HeaderLink from './HeaderLink.astro'

import { getI18N } from '../i18n/'
import LanguajesSelector from './LanguajesSelector.astro'

const { currentLocale } = Astro 
const i18n = getI18N({ currentLocale })

---

<header id="header-nav" class="fixed w-screen py-4 z-50 top-0 px-8 lg:px-0">
    <div class="grid grid-cols-3 max-w-7xl mx-auto items-center justify-between">
        <div class="col-span-1 flex  gap-4">
            <HeaderLink
                checkActive={false}
                href="/"
                class="relative z-10"
            >

                <Logo class="absolute w-10 m-auto blur-sm opacity-0 transition-opacity duration-300 hover:opacity-100"/>

            </HeaderLink>
            <h2 class="justify-self-start" style="font-family: 'Playfair Display'; color: white; font-size: 20px;">
                {i18n.TEXT_LOGO}
                <br>
                {i18n.TEXT_LOGO_AFTER_BR}
            <h2/>
        </div>
        <style>
            .menu-link:hover {
                filter: brightness(1.5); /* Ajusta el valor para cambiar la intensidad de la iluminaci√≥n */
            }
        </style>
        <nav class="col-span-1 justify-self-center">
            <ul class="flex gap-4">
                <li>
                    <a class="menu-link hover:underline" href="#"> {i18n.LINK_1} </a>
                </li>
                <li>
                    <a class="menu-link hover:underline" href="#"> {i18n.LINK_2} </a>
                </li>
                <li>
                    <a class="menu-link hover:underline" href="#"> {i18n.LINK_3} </a>
                </li>
                
                <li>
                    <LanguajesSelector/>
                </li>
            </ul>
        </nav>
        <HeaderLink
                checkActive={false}
                href="/"
                class="relative z-10 justify-self-end"
            >

                <Logo class="absolute w-10 m-auto blur-sm opacity-0 transition-opacity duration-300 hover:opacity-100"/>

            </HeaderLink>
    </div>
</header>