---
import { getI18N } from '../i18n/'

const { currentLocale } = Astro 
const i18n = getI18N({ currentLocale })
---

<section class="justify-center w-full items-center flex flex-col bg-yellow-50 h-[380px] py-10 md:py-20 lg:py-24">
    <div class="w-auto h-auto">
        <svg width="100%" height="100%" viewBox="0 0 258 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 8H116" stroke="#E7C582"></path><path d="M129 13L124 8L129 3L134 8L129 13Z" stroke="#E7C582" stroke-width="3"></path><path d="M142 8H258" stroke="#E7C582"></path></svg>
    </div>

    <div class="text-center md:mt-10">
        <h2 class="text-3xl md:text-4xl lg:text-4xl uppercase"><strong>{i18n.CONTACT_TEXT_1}</strong>
            <p class="mt-3 md:mt-5 lg:mt-6 uppercase" style="letter-spacing:0px">{i18n.CONTACT_TEXT_2}</p>
        </h2>
    </div>

    <div class='flex flex-col md:flex-row gap-5 md:gap-10 mt-5 md:mt-5'>

        <input
            class='block text-left h-12 w-[300px] rounded-md border border-slate-800 bg-white 
            px-3 py-2 text-black' type="email"
            placeholder='CORREO ELECTRÓNICO*'
        />

        <input
            class='block text-left h-12 w-[300px] rounded-md border border-slate-800 bg-white 
            px-3 py-2 text-black'
            placeholder='NÚMERO DE TELÉFONO (opc)'
          />

        <button class="text-white font-bold bg-black rounded-lg px-4 transition-colors duration-300 hover:bg-golden hover:text-black">ENVIAR</button>
    </div>
</section>